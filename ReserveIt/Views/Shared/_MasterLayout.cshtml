<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>ReserveIt | @ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">ReserveIt</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "Index" ? "active" : "")">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                @if (Session["accessLevel"] != null)
                {
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "UserDetails" ? "active" : "")">
                        @Html.ActionLink("My Account", "UserDetails", "Accounts", null, new { @class = "nav-link" })
                    </li>
                }
                @if (Session["accessLevel"] != null)
                {
                    <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "MyReservations" ? "active" : "")">
                        @Html.ActionLink("My Reservations", "MyReservations", "Reservations", null, new { @class = "nav-link" })
                    </li>
                }
            </ul>
            <div class="form-inline my-2 my-lg-0">
                @if (Session["accessLevel"] == null)
                {
                    @Html.ActionLink("Login", "Index", "Login", null, new { @class = "btn btn-outline-success my-2 my-sm-0" });
                }
                else
                {
                    @Html.ActionLink("Logout", "Logout", "Login", null, new { @class = "btn btn-outline-success my-2 my-sm-0" });
                }
            </div>
        </div>
    </nav>

    @RenderBody()
</body>
</html>