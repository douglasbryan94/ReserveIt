<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <title>ReserveIt | Admin | @ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand">ReserveIt Admin Panel</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "UserManagement" ? "active" : "")">
                    @Html.ActionLink("Users", "UserManagement", "Admin", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "ReservationManagement" ? "active" : "")">
                    @Html.ActionLink("Reservations", "ReservationManagement", "Admin", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["Action"].ToString() == "HotelManagement" ? "active" : "")">
                    @Html.ActionLink("Hotels", "HotelManagement", "Admin", null, new { @class = "nav-link" })
                </li>
            </ul>
            <div class="form-inline my-2 my-lg-0">
                @Html.ActionLink("Logout", "AdminLogout", "Login", null, new { @class = "btn btn-outline-success my-2 my-sm-0" })
            </div>
        </div>
    </nav>

    @RenderBody()
</body>
</html>