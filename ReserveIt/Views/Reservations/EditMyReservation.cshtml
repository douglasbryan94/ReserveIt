@model ReserveIt.Models.Reservation

@{
    ViewBag.Title = "Edit Reservation";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <br />
    <h4>Extending Reservation at @Model.Room.Hotel.StreetAddress, @Model.Room.Hotel.CityAddress, @Model.Room.Hotel.StateAddress</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ReservationID)
    @Html.HiddenFor(model => model.UserID)
    @Html.HiddenFor(model => model.RoomID)
    @Html.HiddenFor(model => model.CheckIn)
    @Html.HiddenFor(model => model.StayLength)
    @Html.HiddenFor(model => model.NightlyRate)

    <div class="form-group">
        @Html.LabelFor(model => model.CheckOut, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CheckOut, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CheckOut, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Modify" class="btn btn-success" />
            @Html.ActionLink("Back to Reservations", "MyReservations", "Reservations", null, new { @class = "btn btn-secondary" })
        </div>
    </div>
</div>
}