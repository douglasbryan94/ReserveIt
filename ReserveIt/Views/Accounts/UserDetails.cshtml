@{
    ViewBag.Title = "DetailsUser";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";

    string[] phoneSegments = ((string)Session["phone"]).Split('-');
}

<body>
    <br>
    <br>
    <table>
        <tr>
            <td style="padding-left: 50px;">
                <div class="container">
                    <div class="panel panel-default">
                        <h2>Personal Information</h2>
                        <div class="panel-body">Name: @(Session["firstName"] + " " + Session["middleName"] + " " + Session["lastName"])</div>
                        <div class="panel-body">
                            Address:
                            @(Session["streetAddress"] + ", " +
                            Session["cityAddress"] + ", " +
                            Session["stateAddress"] + ", " +
                            Session["countryAddress"] + ", " +
                            Session["zipAddress"])
                        </div>
                    </div>
                </div>
            </td>
            <td style="padding-left: 50px;">
                @Html.ActionLink("Edit", "ModifyPersonal", "Accounts", new { id = Session["userID"] }, new { @class = "btn btn-warning" })
            </td>
        </tr>
        <tr>
            <td style="padding-left: 50px; padding-top: 50px;">
                <div class="container">
                    <h2>Contact Information</h2>
                    <div class="panel panel-default">
                        <div class="panel-body">
                            Phone:
                            @(phoneSegments[0] + " (" + phoneSegments[1] + ")-" + phoneSegments[2] + "-" + phoneSegments[3])
                        </div>
                        <div class="panel-body">Email: @Session["email"]</div>
                    </div>
                </div>
            </td>
            <td style="padding-left: 50px; padding-top: 50px;">
                @Html.ActionLink("Edit", "ModifyContact", "Accounts", new { id = Session["userID"] }, new { @class = "btn btn-warning" })
            </td>
        </tr>
    </table>
    <br>
    <br>
    <br>
</body>